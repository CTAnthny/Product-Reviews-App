<h2>Resend unlock instructions</h2>

<%= bootstrap_form_for(resource, as: resource_name, label_errors: true, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.errors_on :unlock_token %>

  <div class="form-inputs">
    <%= f.email_field, label_class: "required" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Resend unlock instructions", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
