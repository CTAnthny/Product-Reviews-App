<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= bootstrap_form_for(resource, as: resource_name, label_errors: true, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <div class="form-inputs">
    <%= f.text_field :first_name, label: 'First Name', label_class: "required" %>
    <%= f.text_field :last_name, label: 'Last Name', label_class: "required" %>
    <%= f.email_field :email, label_class: "required" %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.password_field :password, help: "Leave it blank if you don't want to change it", skip_required: true %>
    <%= f.password_field :password_confirmation, label: 'Password Confirmation', skip_required: true %>
    <%= f.password_field :current_password, label: 'Current Password',
      help: "We need your current password to confirm your changes", label_class: "required" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>

<p><br /><%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
