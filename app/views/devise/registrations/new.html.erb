<h2>Sign Up</h2>

<%= bootstrap_form_for(resource, as: resource_name, label_errors: true, url: registration_path(resource_name)) do |f| %>

  <div class="form-inputs">
    <%= f.text_field :first_name, label: 'First Name', label_class: "required" %>
    <%= f.text_field :last_name, label: 'Last Name', label_class: "required" %>
    <%= f.email_field :email, label_class: "required" %>
    <%= f.password_field :password, label_class: "required", help: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.password_field :password_confirmation, label: 'Password Confirmation', label_class: "required" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Sign Up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
