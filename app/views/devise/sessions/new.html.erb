<h2>Log in</h2>

<%= bootstrap_form_for(resource, as: resource_name, label_errors: true, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.email_field :email, skip_required: true %>
    <%= f.password_field :password, skip_required: true %>
    <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.submit "Sign In", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
