<% if @product.errors.any? %>
  <div class="alert alert-danger" id="error_explanation">
    <div>
      The form contains <%= pluralize(@product.errors.count, "error") %>.
    </div>
    <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
